#!/bin/sh
BENCH_PL=`cat ../PROGS`

p=`(cd ..;pwd)`
p1=`pwd`;
h=HOOK.pl

for i in ${*:-$BENCH_PL}
do
        echo $i
        f=$i.pl
        echo "#!/bin/sh" >$i
        echo "sed -e 's/^:- include(common)\.//' $p/$i.pl >$f" >>$i
        echo "sed -e 's/^:- include(hook)\.//' $p/common.pl >>$f" >>$i
        echo "cat HOOK.pl >>$f" >>$i
	echo "echo \"compile('$p1/$f'). \" | yap -- \$* 2>/dev/null" >>$i
	chmod a+x $i
done
